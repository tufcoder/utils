# vim
alias vi="vim -u NONE"
alias vrc="vim $HOME/.vim/vimrc"

# bashrc
alias brc="vim $HOME/.bashrc"

# bash_aliases
alias ba="vim $HOME/.bash_aliases"

# bash_configs
alias bc="vim $HOME/.bash_configs"

# some more ls aliases (from .bashrc)
alias ll="ls -lF"
alias la="ls -A"
alias l="ls -CF"
alias lla="ls -lAF"
alias cl="clear"
alias lr="ls -CFR"
alias lar="ls -AR"

# python3
alias python="python3"
