# vim
alias vi="vim -u NONE"
alias vrc="vim $HOME/.vim/vimrc"

# bashrc
alias brc="vim $HOME/.bashrc"

# bash_aliases
alias ba="vim $HOME/.bash_aliases"

# bash_configs
alias bc="vim $HOME/.bash_configs"

# terminal
alias lla="ls -lAF"
alias cl="clear"
# some more ls aliases (from .bashrc)
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# python3
alias python="python3"
