# vim
alias vi="vim -u NONE"
alias vrc="vim $HOME/.vim/vimrc"

# bashrc
alias brc="vim $HOME/.bashrc"

# bash_aliases
alias ba="vim $HOME/.bash_aliases"

# bash_configs
alias bc="vim $HOME/.bash_configs"

# some more ls aliases (from .bashrc)
alias cl="clear"
alias ll="ls -lFh"
alias la="ls -Ah"
alias l="ls -CFh"
alias lla="ls -lAFh"
alias lr="ls -CFRh"
alias lar="ls -ARh"
alias lt="ls -lth"
alias lta="ls -Aht"
alias llta="ls -lAht"

# python3
alias python="python3"
